Vagrant.configure("2") do |config|
  config.vm.box = "crouchr/blackrain2020"
  config.vm.box_version = "2.0.16"
  config.vm.box_check_update = true
  #config.vm.box_url = 'http://web.ermin/boxes/blackrain2020/metadata.json'
  #config.vm.box_url = 'https://richardcrouch.s3-eu-west-1.amazonaws.com/boxes/blackrain2020.box'

  config.vm.network "public_network", ip: "192.168.1.67", bridge: "virbr1"

  config.vm.provider "virtualbox" do |v|
    v.memory = 2048
    v.cpus = 2
  end

