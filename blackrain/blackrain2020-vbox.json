{
  "description": "BlackRain2020 CentOS7 Server packer template - VirtualBox",
  "min_packer_version": "0.8.6",

  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "{{ user `vm_name` }}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--memory",
          "3072"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--cpus",
          "2"
        ]
      ],
      "export_opts":
      [
        "--manifest",
        "--vsys", "0",
        "--description", "{{ user `vm_description` }}",
        "--version", "{{ user `box_version` }}"
      ],
      "hard_drive_interface": "sata",
      "disk_size": "{{ user `disk_size` }}",
      "output_directory": "{{ user `virtualbox_output_directory` }}",
      "guest_os_type": "RedHat_64",
      "guest_additions_url": "http://download.virtualbox.org/virtualbox/{{ .Version }}/VBoxGuestAdditions_{{ .Version }}.iso",
      "guest_additions_mode": "upload",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "headless": false,
      "http_directory": "http",
      "boot_wait": "15s",
      "boot_command": [
        "<tab>",
        " ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `kickstart_filename`}}",
        "<enter>"
      ],
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "1h"
    }
  ],

    "provisioners": [
      {
        "type": "shell",
        "scripts": [
            "./packer-scripts/yum-update-all.sh",
            "./packer-scripts/set-blackrain-hostname.sh"
          ]
      },
      {
        "type": "shell",
        "script": "./packer-scripts/reboot.sh",
        "expect_disconnect": true
      },
      {
        "type": "file",
        "source": "/home/crouchr/PycharmProjects/learnage/bootstrap-chef-files/knife.rb",
        "destination": "/tmp/knife.rb"
      },
      {
        "type": "file",
        "source": "/home/crouchr/PycharmProjects/learnage/bootstrap-chef-files/client.rb",
        "destination": "/tmp/client.rb"
      },
      {
        "type": "file",
        "source": "/home/crouchr/PycharmProjects/learnage/bootstrap-chef-files/first-run.json",
        "destination": "/tmp/first-run.json"
      },
      {
        "type": "file",
        "source": "/home/crouchr/PycharmProjects/learnage/bootstrap-chef-files/crouchrermin.pem",
        "destination": "/tmp/crouchrermin.pem"
      },
      {
        "type": "file",
        "source": "/home/crouchr/PycharmProjects/learnage/bootstrap-chef-files/blackrainermin-validator.pem",
        "destination": "/tmp/blackrainermin-validator.pem"
      },
      {
        "type": "file",
        "source": "/home/crouchr/PycharmProjects/learnage/bootstrap-chef-files/trusted_certs/chef-server.crt",
        "destination": "/tmp/chef-server.crt"
      },
      {
         "type": "file",
         "source": "/home/crouchr/.ssh/rch-nvm-sshkey.pub",
         "destination": "/tmp/crouchr_authorized_keys"
      },
      {
         "type": "file",
         "source": "/home/crouchr/.ssh/jenkins-ermin-keys.pub",
         "destination": "/tmp/jenkins_authorized_keys"
      },
      {
        "type": "shell",
        "scripts":
           [
             "./packer-scripts/install-spacewalk-client.sh",
             "./packer-scripts/register-to-spacewalk.sh",
             "./packer-scripts/install-tools-packages.sh",
             "./packer-scripts/install-chef-client.sh",
             "./packer-scripts/install-docker.sh",
             "./packer-scripts/install-chef-certs-and-scripts.sh",
             "./packer-scripts/install-blackrain-packages.sh",
             "./packer-scripts/install-clamav.sh",
             "./packer-scripts/install-snort.sh",
             "./packer-scripts/add-vagrant-insecure-key.sh",
             "./packer-scripts/add-users.sh",
             "./packer-scripts/add-jenkins.sh",
             "./packer-scripts/install-user-ssh-keys.sh",
             "./packer-scripts/install-jenkins-ssh-keys.sh",
             "./packer-scripts/sshd-config.sh",
             "./packer-scripts/install-centos7-vbox-guest-tools-dependencies.sh",
             "./packer-scripts/install-vbox-guest-tools.sh",
             "./packer-scripts/bootstrap-blackrain.sh",
             "./packer-scripts/dump-info.sh"
           ]
      },
      {
        "type": "shell",
        "script": "./packer-scripts/reboot.sh",
        "expect_disconnect": true
      }
    ],

  "post-processors": [
    {
      "type": "vagrant",
      "only": [
        "virtualbox-iso"
      ],
      "output": "{{ user `build_directory` }}/{{ user `vm_name` }}/{{ user `box_version` }}/virtualbox/{{ user `vm_name` }}.box",
      "compression_level": 9,
      "keep_input_artifact": true
    },
    {
      "type": "manifest",
      "output": "packer_built_images.json",
      "strip_path": true
    }
  ]
}
